{
  "extends": ["stylelint-config-standard"],
  "rules": {
    "import-no-unresolved": true,
    "color-named": "always",
    "declaration-block-trailing-semicolon": "always",
    "block-no-empty": true,
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "layer",
          "responsive",
          "variants",
          "custom-variant",
          "utility",
          "theme",
          "import",
          "config"
        ]
      }
    ],
    "function-no-unknown": [
      true,
      {
        "ignoreFunctions": ["theme", "oklch"]
      }
    ]
  }
}
